{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "run client",
        "type": "shell",
        "command": "npm run dev",
        "isBackground": true,
        "problemMatcher": {
          "pattern": {
            "regexp": "^\\[tsl\\] \\d+:\\d+ - "
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "ready in",
            "endsPattern": "Local"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "group": "debug",
          "showReuseMessage": false,
          "clear": false,
          "close": true
        }
      }
    ]
  }
  